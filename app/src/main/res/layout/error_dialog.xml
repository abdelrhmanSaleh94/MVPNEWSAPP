<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardImage"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="25dp"
            android:outlineSpotShadowColor="@color/red_error">

            <ImageView
                android:id="@+id/dialogImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/oops" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/dialogTvTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardImage"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:padding="5dp"
            android:text="News APP"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogTvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogTvTittle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:padding="5dp"
            android:text="News APP"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogTvMessage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@color/red_error"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/dialogBtnCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red_error"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:text="OK"
                android:textColor="@color/colorBackground"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.v7.widget.CardView>